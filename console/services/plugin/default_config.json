{
  "downstream_net_plugin": {
    "plugin_alias": "网络综合治理插件",
    "desc": "支持出口网络治理和入口网络治理",
    "category": "net-plugin:in-and-out",
    "code_repo": "",
    "build_source": "image",
    "image": "goodrain.me/mesh_plugin",
    "config_group": [
      {
        "config_name": "limit-config",
        "injection": "auto",
        "service_meta_type": "upstream_port",
        "options": [
          {
            "attr_info": "是否开启限流",
            "protocol": "",
            "attr_default_value": "YES",
            "attr_name": "OPEN_LIMIT",
            "attr_alt_value": "YES,NO",
            "is_change": true,
            "attr_type": "radio"
          },
          {
            "attr_info": "对应限流规则的域名",
            "protocol": "",
            "attr_default_value": "limit.common",
            "attr_name": "LIMIT_DOMAIN",
            "attr_alt_value": "",
            "is_change": true,
            "attr_type": "string"
          }
        ]
      },
      {
        "service_meta_type": "downstream_port",
        "injection": "auto",
        "config_name": "outbound",
        "options": [
          {
            "attr_info": "匹配域名",
            "protocol": "http",
            "attr_default_value": "",
            "attr_name": "Domains",
            "attr_alt_value": "",
            "is_change": true,
            "attr_type": "string"
          },
          {
            "attr_info": "匹配请求路径前缀",
            "protocol": "http",
            "attr_default_value": "",
            "attr_name": "Prefix",
            "attr_alt_value": "",
            "is_change": true,
            "attr_type": "string"
          },
          {
            "attr_info": "匹配请求头（k=v,k2=v2)）",
            "protocol": "http",
            "attr_default_value": "",
            "attr_name": "Headers",
            "attr_alt_value": "",
            "is_change": true,
            "attr_type": "string"
          },
          {
            "attr_info": "最大连接数",
            "protocol": "",
            "attr_default_value": "1024",
            "attr_name": "MaxConnections",
            "attr_alt_value": "",
            "is_change": true,
            "attr_type": "string"
          },
          {
            "attr_info": "最大并行请求数",
            "protocol": "http",
            "attr_default_value": "1024",
            "attr_name": "MaxRequests",
            "attr_alt_value": "",
            "is_change": true,
            "attr_type": "string"
          },
          {
            "attr_info": "最大等待请求数",
            "protocol": "http",
            "attr_default_value": "1024",
            "attr_name": "MaxPendingRequests",
            "attr_alt_value": "",
            "is_change": true,
            "attr_type": "string"
          },
          {
            "attr_info": "最大重试次数",
            "protocol": "http",
            "attr_default_value": "5",
            "attr_name": "MaxActiveRetries",
            "attr_alt_value": "",
            "is_change": true,
            "attr_type": "string"
          },
          {
            "attr_info": "每个连接最大请求数，默认不限制，设为1则禁用keep alive",
            "protocol": "http",
            "attr_default_value": "",
            "attr_name": "MaxRequestsPerConnection",
            "attr_alt_value": "",
            "is_change": true,
            "attr_type": "string"
          }
        ]
      }
    ]
  },
  "perf_analyze_plugin": {
    "plugin_alias": "服务实时性能分析",
    "desc": "实时分析应用的吞吐率、响应时间、在线人数等指标",
    "category": "analyst-plugin:perf",
    "code_repo": "",
    "build_source": "image",
    "image": "goodrain.me/tcm",
    "config_group": [
      {
        "service_meta_type": "upstream_port",
        "injection": "auto",
        "config_name": "端口是否开启分析",
        "options": [
          {
            "attr_name": "OPEN",
            "attr_type": "radio",
            "attr_default_value": "YES",
            "is_change": true,
            "attr_alt_value": "YES,NO",
            "attr_info": "是否开启当前端口分析，用户自助选择服务端口",
            "protocol": "http,mysql"
          }
        ]
      }
    ]
  }
}